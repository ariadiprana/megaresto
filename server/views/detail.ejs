  <body>

    <!-- CONTENT -->
            <div class="container" style="margin-top: 20px; margin-bottom: 20px;">
            <div class="row">
                  <div class="col-md-4 bg_blur ">
                    <img width="120" heigth="120" src="/images/question.png" class="img-thumbnail picture hidden-xs" />
                  </div>
                  <div class="col-md-8  col-xs-12">
                     <div class="header">
                          <h1><%=content.title %></h1>
                          <span><%=content.content %></span>
                     </div>

                    <div class="body" style="margin-top: 20px">
                      <div class="col-md-4  col-xs-12"></div>
                      <div class="col-md-2  col-xs-12">
                          <form method="POST" action="/loginback/<%= username%>">
                               <button type="submit" class="btn btn-primary">Back</button>
                         </form>
                     </div>
                     <div class="col-md-2  col-xs-12">
                       <form method="POST" action="/content/delete/<%= content.id%>/<%= username%>">
                           <button type="submit" class="btn btn-danger">Delete</button>
                       </form>
                     </div>
                    </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-4 bg_blur "><p><small>posted by <b><%=content.userName %></b></small></p></div>
                  <div class="col-md-8  col-xs-12"></div>
              </div>

              <div class="col-xs-12 divider text-center panel">
                      <div class="col-xs-12 col-sm-4 emphasis">
                          <h2 class="ijo"><strong> <i class="fa fa-weixin fa-lg"></i> <%=content.answer%> </strong></h2>
                          <p><small>Answers</small></p>
                      </div>
                      <div class="col-xs-12 col-sm-4 emphasis">
                          <h2 class="biru"><strong><i class="fa fa-thumbs-o-up fa-lg"></i> <%=content.upvote%></strong></h2>
                          <form method="POST" action="/thumbsup/<%= content.id%>/<%= username%>">
                              <button type="submit" class="btn btn-success">Thumbs Up!</button>
                          </form>
                      </div>
                      <div class="col-xs-12 col-sm-4 emphasis">
                        <h2 class="merah"><strong><i class="fa fa-thumbs-o-down fa-lg"></i> <%=content.downvote%></strong></h2>
                        <form method="POST" action="/thumbsdown/<%= content.id%>/<%= username%>">
                            <button type="submit" class="btn btn-danger">Thumbs Up!</button>
                        </form>
                      </div>
                  </div>
          </div>
          <form method="POST" action="/answer/<%=content.id%>/<%=username%>">
              <table class="table">
                  <tr>
                    <td>Oleh</td><td>Jawaban</td><td>Button</td>
                  </tr>
                  <%if(answer) {%>
                      <%for(var i in answer) {%>
                          <tr>
                            <td>
                                <%=answer[i].username %>
                            </td>
                            <td>
                                <%=answer[i].content %>
                            </td>
                          </tr>
                      <%}%>
                  <%}%>
                  <tr>
                    <td>
                      <%=username%>
                    </td>
                    <td>
                        <input type="text" class="form-control" placeholder="Jawaban" name="content">
                        <input type="hidden" name="contentId" value="<%=content.id%>">
                    </td>
                    <td>
                      <button type="submit" class="btn btn-primary" name="masuk">JAWAB</button>
                    </td>
                  </tr>
              </table>
          </form>
  <!-- CONTENT END -->


