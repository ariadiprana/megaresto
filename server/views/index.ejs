      <!-- CONTENT -->
      <% if(content){ %>
          <% for(var i in content){ %>
              <div class="container" style="margin-top: 20px; margin-bottom: 20px;">
              <div class="row">
                    <div class="col-md-4 bg_blur ">
                      <img width="120" heigth="120" src="/images/question.png" class="img-thumbnail picture hidden-xs" />
                    </div>
                    <div class="col-md-8  col-xs-12">
                       <div class="header">
                            <h1><%=content[i].title %></h1>
                            <span><%=content[i].content %></span>
                       </div>

                      <div class="body" style="margin-top: 20px">
                        <div class="col-md-4  col-xs-12"></div>
                        <div class="col-md-4  col-xs-12">
                            <form method="POST" action="/content/detail/<%= content[i].id%>/<%= profile.username%>">
                                 <button type="submit" class="btn btn-primary">Detail</button>
                           </form>
                       </div>
                      </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 bg_blur "><p><small>posted by <b><%=content[i].userName %></b></small></p></div>
                    <div class="col-md-8  col-xs-12"></div>
                </div>

                <div class="col-xs-12 divider text-center panel">
                        <div class="col-xs-12 col-sm-4 emphasis">
                            <h2 class="ijo"><strong> <i class="fa fa-weixin fa-lg"></i> <%=content[i].answer%> </strong></h2>
                            <p><small>Answers</small></p>
                        </div>
                        <div class="col-xs-12 col-sm-4 emphasis">
                            <h2 class="biru"><strong><i class="fa fa-thumbs-o-up fa-lg"></i> <%=content[i].upvote%></strong></h2>
                            <p><small>Thumbs Up</small></p>
                        </div>
                        <div class="col-xs-12 col-sm-4 emphasis">
                          <h2 class="merah"><strong><i class="fa fa-thumbs-o-down fa-lg"></i> <%=content[i].downvote%></strong></h2>
                          <p><small>Thumbs Down</small></p>
                        </div>
                    </div>
            </div>
        <% }%>
    <% } %>
    <!-- CONTENT END -->

